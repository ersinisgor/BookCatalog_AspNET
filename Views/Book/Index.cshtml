@model IEnumerable<BookCatalog.Models.Book>

@{
	ViewBag.Title = "Books List";
}

<h2>Books List</h2>

<table class="table">
	<thead>
		<tr>
			<th>Title</th>
			<th>Author</th>
			<th>Genre</th>
			<th>Page Count</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var book in Model)
		{
			<tr>
				<td>@book.Title</td>
				<td>@book.Author</td>
				<td>@book.Genre</td>
				<td>@book.PageCount</td>
				<td>
					<a asp-action="Edit" asp-route-id="@book.Id">Edit</a> |
					<a asp-action="Delete" asp-route-id="@book.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Book</a>